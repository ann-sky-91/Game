{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "../Modules/node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "../Modules/*",
                "../Modules/node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "../Modules/node_modules"
    ]
}