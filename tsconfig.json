{
    "compilerOptions": {
        "lib": ["ES2017", "DOM"],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",

        "esModuleInterop": true,

        "typeRoots": [
            "../Modules/node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "test/*": ["../Modules/node_modules/*"],
            "*": ["../Modules/*", "../Modules/includes/*", "../Modules/node_modules/*"],
            "modules/*": ["../Modules/*", "../Modules/includes/*", "../Modules/node_modules/*"],
            "public/*": ["public/*"],
            "front-end/*": ["front-end/*"],
            "back-end/*": ["back-end/*"],
            "shared/*": ["shared/*"],
            "landing/*": ["landing/*"]
        }
    },
    "include": ["front-end", "back-end", "shared", "landing"],
    "exclude": ["node_modules", "../Modules/node_modules"]
}
