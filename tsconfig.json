{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "../Modules/node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "shared/node_modules/*",
                "back-end/node_modules/*",
                "../Modules/*",
                "../Modules/node_modules/*"
            ],
            "front-end/*": [
                "front-end/*"
            ],
            "shared/*": [
                "shared/*"
            ],
            "back-end/*": [
                "back-end/*"
            ]
        }
    },
    "include": [
        "front-end",
        "shared",
        "back-end"
    ],
    "exclude": [
        "node_modules",
        "shared/node_modules",
        "back-end/node_modules",
        "../Modules/node_modules"
    ]
}