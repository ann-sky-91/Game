{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../Modules/node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "../Modules/node_modules/*"
            ],
            "@/*": [
                "app/*"
            ],
            "libs/*": [
                "../Modules/libs/*"
            ],
            "sky/*": [
                "../Modules/*"
            ],
            "game/*": [
                "app/*"
            ],
            "public/*": [
                "app/public/*"
            ]
        }
    },
    "include": [
        "../Modules",
        "app",
        "app/public"
    ],
    "exclude": [
        "node_modules",
        "../Modules/node_modules"
    ]
}